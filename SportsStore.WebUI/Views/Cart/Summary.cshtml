@model SportsStore.Domain.Entities.Cart

<form class="form-inline">
    <button class="btn btn-light btn-sm mx-4 my-0" type="submit">
        @Html.ActionLink("Twój koszyk", "Index", "Cart",
        new { returnUrl = Request.Url.PathAndQuery },
        new { @class = "btn btn-default btn-sm my-0" })
    </button>
    <p class="navbar-text">
        <b>Twoje zakupy:</b>
        @Model.Lines.Sum(x => x.Quantity) sztuk,
        @Model.ComputeTotalValue().ToString("c")
    </p>
</form>